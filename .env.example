# Database Configuration
DATABASE_URL=postgresql://evamp:your_secure_password_here@localhost:5432/evamp_ops
DB_USER=evamp
DB_PASSWORD=your_secure_password_here

# Encryption Key (Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your_encryption_key_here

# eBay API Credentials (from https://developer.ebay.com/my/keys)
EBAY_APP_ID=your_app_id_here
EBAY_CERT_ID=your_cert_id_here
EBAY_DEV_ID=your_dev_id_here

# eBay Webhook Secret - NOT the same as User Token!
# - User Token: What you got when you logged into eBay and granted permissions (OAuth).
#   Used to call eBay APIs (orders, messages). Stored/managed by the app when we add eBay OAuth.
# - Webhook Secret: A secret YOU create when configuring the webhook endpoint in eBay Developer
#   Portal (Notifications). eBay signs webhook requests with it; we verify the signature.
#   Only needed when you set up real-time message notifications. Leave placeholder until then.
EBAY_WEBHOOK_SECRET=your_webhook_secret_here

# AI Provider API Keys (Set via Settings UI, these are fallbacks)
# ANTHROPIC_API_KEY=your_anthropic_key_here
# OPENAI_API_KEY=your_openai_key_here

# Application Settings
DEBUG=true
CORS_ORIGINS=http://localhost:5173
